{
    "title":"Layer",
    "description":"JSON schema for Layer POJO",
    "implements":[
        {
            "$ref":"org.sagebionetworks.repo.model.Locationable"
        },
        {
            "$ref":"org.sagebionetworks.repo.model.HasPreviews"
        },
        
    ],
    "properties":{
        "publicationDate":{
            "type":"string",
            "format":"date-time",
            "description":"Date this layer was published",
            "title":"Publication Date",
            
        },
        "releaseNotes":{
            "type":"string",
            "description":"Free text about layer",
            "title":"Release Notes",
            
        },
        "type":{
            "type":"string",
            "description":"Type of layer",
            "name":"LayerTypeNames",
            "id":"org.sagebionetworks.repo.model.LayerTypeNames",
            "enum":[
                "E",
                "G",
                "C",
                "M"
            ],
            
        },
        "tissueType":{
            "type":"string",
            "description":"Type of tissue for the samples in this layer. Tissue is described by the Synapse ontology concept: http://synapse.sagebase.org/ontology#6501",
            "links":[
                {
                    "rel":"describedby",
                    "href":"http://synapse.sagebase.org/ontology#6501",
                    
                },
                
            ],
            "title":"Tissue Type",
            
        },
        "platform":{
            "type":"string",
            "description":"Chip platform for the samples in this layer",
            "links":[
                {
                    "rel":"describedby",
                    "href":"http://synapse.sagebase.org/ontology#6501",
                    
                },
                
            ],
            "title":"Platform",
            
        },
        "processingFacility":{
            "type":"string",
            "description":"Location where the samples for this layer were processed",
            "title":"Processing Facility",
            
        },
        "status":{
            "type":"string",
            "description":"Status of this layer",
            "title":"Status",
            
        },
        "numSamples":{
            "type":"integer",
            "description":"Approximate number of samples in this layer",
            "title":"Number of Samples"
        }
    }
}
