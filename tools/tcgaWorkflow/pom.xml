<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  
  <parent>
    <artifactId>tools</artifactId>
    <groupId>org.sagebionetworks</groupId>
    <version>parent-1.0</version>
  </parent>
  
  <groupId>org.sagebionetworks</groupId>
  <artifactId>tcgaWorkflow</artifactId>
  <packaging>jar</packaging>
  <version>${applicationVersion}</version>
  <name>tcgaWorkflow</name>

  <dependencies>

    <dependency>
      <groupId>org.sagebionetworks</groupId>
      <artifactId>synapseJavaClient</artifactId>
      <version>${applicationVersion}</version>
    </dependency>

	<dependency>
	  <groupId>org.sagebionetworks</groupId>
	  <artifactId>lib-stackConfiguration</artifactId>
	  <version>${applicationVersion}</version>
	</dependency>

    <!-- AWS dependencies -->
    <dependency>
      <groupId>com.amazonaws</groupId>
      <artifactId>aws-java-sdk</artifactId>
      <version>1.1.5</version>
    </dependency>

    <!-- Simple Workflow Framework -->
    <dependency>
      <groupId>com.amazonaws.services.simpleworkflow</groupId>
      <artifactId>AWSSimpleWorkflowSDK</artifactId>
      <version>1.2</version>
    </dependency>

    <dependency>
      <groupId>com.amazonaws.services.simpleworkflow</groupId>
      <artifactId>SimpleWorkflowCore</artifactId>
      <version>2010.03.10</version>
    </dependency>
    
    <dependency>
      <groupId>com.amazonaws.services.simpleworkflow</groupId>
      <artifactId>Asynchrony</artifactId>
      <version>1.0</version>
    </dependency>
    
    <dependency>
      <groupId>com.amazonaws.services.simpleworkflow</groupId>
      <artifactId>AsynchronyDecider</artifactId>
      <version>2.0</version>
    </dependency>
    
    <dependency>
      <groupId>com.amazonaws.services.simpleworkflow</groupId>
      <artifactId>AWSSimpleWorkflowJavaClientFrameworkCommon</artifactId>
      <version>1.0</version>
    </dependency>

    <dependency>
      <groupId>com.amazonaws.services.simpleworkflow</groupId>
      <artifactId>AWSSimpleWorkflowJavaClientFrameworkActivityCommon</artifactId>
      <version>1.0</version>
    </dependency>

    <dependency>
      <groupId>com.amazonaws.services.simpleworkflow</groupId>
      <artifactId>AWSSimpleWorkflowJavaClientFrameworkDataConverterCommon</artifactId>
      <version>1.0</version>
    </dependency>

    <dependency>
      <groupId>com.amazonaws.services.simpleworkflow</groupId>
      <artifactId>AWSSimpleWorkflowJavaClientFrameworkPollingActivityExecutorService</artifactId>
      <version>1.0</version>
    </dependency>

    <dependency>
      <groupId>com.amazonaws.services.simpleworkflow</groupId>
      <artifactId>AWSSimpleWorkflowJavaClientFrameworkPollingDeciderExecutorService</artifactId>
      <version>1.0</version>
    </dependency>

    <!-- Jackson JSON Mapper -->
    <dependency>
      <groupId>org.codehaus.jackson</groupId>
      <artifactId>jackson-mapper-asl</artifactId>
      <version>${jackson.version}</version>
    </dependency>

    <!-- JSON -->
    <dependency>
      <groupId>org.json</groupId>
      <artifactId>json</artifactId>
      <version>20080701</version>
    </dependency>

    <!-- String utils -->
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
      <version>2.3</version>
    </dependency>
    
    <!-- HTTPClient -->
    <dependency>
      <groupId>commons-httpclient</groupId>
      <artifactId>commons-httpclient</artifactId>
      <version>3.1</version>
    </dependency>
    
    <!-- Codec -->
    <dependency>
      <groupId>commons-codec</groupId>
      <artifactId>commons-codec</artifactId>
      <version>1.3</version>
    </dependency>

    <!-- jsoup HTML parser library @ http://jsoup.org/ -->
    <!-- JQuery-like HTML parser -->
    <dependency>
      <groupId>org.jsoup</groupId>
      <artifactId>jsoup</artifactId>
      <version>1.5.2</version>
    </dependency>
    
    <!-- Stuff needed by SWF -->
    <dependency>
      <groupId>javassist</groupId>
      <artifactId>javassist</artifactId>
      <version>3.9.0.GA</version>
    </dependency>

    <dependency>
      <groupId>net.sf.scannotation</groupId>
      <artifactId>scannotation</artifactId>
      <version>1.0.2</version>
    </dependency>
    
    <!-- Logging dependencies -->
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.14</version>
    </dependency>
    
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.1</version>
    </dependency>

    <dependency>
		<groupId>junit</groupId>
		<artifactId>junit</artifactId>
	</dependency>

  </dependencies>

  <build>

    <!-- The shade plugin is building a jar with all the other jar dependencies bundled inside.  We can use this to run all three of our main classes in this package (not just the one we have listed as the main class). -->
    <!-- java -Dorg.sagebionetworks.credentialsFile=/Users/deflaux/workflowCreds.properties -jar target/tcgaWorkflow-0.5-SNAPSHOT.jar -->
    <!-- java -Dorg.sagebionetworks.credentialsFile=/Users/deflaux/workflowCreds.properties -cp target/tcgaWorkflow-0.5-SNAPSHOT.jar org.sagebionetworks.workflow.curation.TcgaWorkflowDeciderService -->
    <!-- java -Dorg.sagebionetworks.credentialsFile=/Users/deflaux/workflowCreds.properties -cp target/tcgaWorkflow-0.5-SNAPSHOT.jar org.sagebionetworks.workflow.curation.TcgaWorkflowActivityService -->
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <mainClass>org.sagebionetworks.workflow.curation.TcgaWorkflowInitiator</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  
</project>
